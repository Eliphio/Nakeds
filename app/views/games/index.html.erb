<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Responsable</th>
    <th>Day week</th>
    <th>Hour start</th>
    <th>Hour end</th>
    <th>Place</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.responsable %></td>
    <td><%= game.day_week %></td>
    <td><%= game.hour_start %></td>
    <td><%= game.hour_end %></td>
    <td><%= game.place %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

